{
	"name": "divekit",
	"displayName": "Divekit",
	"description": "Plugin for the Divekit tool",
	"version": "0.0.2",
	"publisher": "Divekit",
	"repository": {
		"url": "https://github.com/divekit/divekit-language-plugin-vscode"
	},
	"icon": "images/divekit_icon.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:divekit"
	],
	"dependencies": {
		"vscode-languageclient": "7.0.0"
	},
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Divekit",
			"properties": {
				"divekit.general.active": {
					"type": "boolean",
					"default": false,
					"description": "Tick box to activate the divekit language server plugin"
				},
				"divekit.paths.pathToLanguageServerJar": {
					"type": "string",
					"default": "",
					"description": "Enter the absolute path to the divekit language server jar"
				},
				"divekit.paths.pathToVariationsConfigJson": {
					"type": "string",
					"default": "",
					"description": "Enter the absolute path to the variationsConfig.json file"
				},
				"divekit.paths.pathToVariableExtensionsConfigJson": {
					"type": "string",
					"default": "",
					"description": "Enter the absolute path to the variableExtensionsConfig.json file"
				}
			}
		},
		"languages": [
			{
				"id": "divekit",
				"aliases": [
					"Divekit"
				],
				"extensions": [
					".md",
					".java"
				],
				"configuration": "./language-configuration.json"
			}
		],
		"grammars": [
			{
				"language": "divekit",
				"scopeName": "source.divekit",
				"path": "./syntaxes/divekit.tmLanguage."
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.46.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.19.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}
